<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/gradientcols"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.soundtrack.bart.soundtrack.MenuActivity"
    tools:showIn="@layout/activity_menu">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/gradientbuttons"
        android:text="Import Artists"
        android:textAllCaps="false"
        style="@style/ButtonText"
        android:id="@+id/importArtists"
        android:onClick="redToImportArtists"
        android:layout_marginTop="55dp"
        android:layout_below="@+id/menuText"
        android:layout_alignLeft="@+id/updateLocationBtn"
        android:layout_alignStart="@+id/updateLocationBtn"
        android:layout_alignRight="@+id/updateLocationBtn"
        android:layout_alignEnd="@+id/updateLocationBtn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/gradientbuttons"
        android:text="Log Out"
        android:textAllCaps="false"
        style="@style/ButtonText"
        android:id="@+id/logOutBtn"
        android:onClick="logOut"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="96dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menu"
        android:id="@+id/menuText"
        android:layout_marginTop="41dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        style="@style/ButtonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/gradientbuttons"
        android:text="Update location"
        android:onClick="redToUpdateLocation"
        android:textAllCaps="false"
        android:id="@+id/updateLocationBtn"
        android:layout_below="@+id/importArtists"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp" />

    <Button
        style="@style/ButtonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/gradientbuttons"
        android:text="View artists"
        android:onClick="redToViewArtistList"
        android:textAllCaps="false"
        android:id="@+id/viewArtistsBtn"
        android:layout_below="@+id/updateLocationBtn"
        android:layout_alignRight="@+id/updateLocationBtn"
        android:layout_alignEnd="@+id/updateLocationBtn"
        android:layout_alignLeft="@+id/updateLocationBtn"
        android:layout_alignStart="@+id/updateLocationBtn" />

</RelativeLayout>
